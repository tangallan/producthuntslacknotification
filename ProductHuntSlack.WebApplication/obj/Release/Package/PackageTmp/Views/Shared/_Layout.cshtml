<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Hunt Slack Notification</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    @RenderSection("Head", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Product Hunt Slack Notification", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse pull-right">
                <a href="https://www.producthunt.com" target="_blank">
                    <img src="~/Content/images/product-hunt-header.png" />
                </a>
                <a href="http://www.slack.com" target="_blank">
                    <img src="~/Content/images/slack-logo.png" />
                </a>
            </div>
        </div>
    </div>
    <br clear="all" />
    <div class="container body-content" style="margin-top:100px:">
        @RenderBody()
        <hr />
        <footer>
            <div class="pull-left">
                <p>&copy; @DateTime.Now.Year - Product Hunt Slack Notification</p>
            </div>

            <div class="pull-right">
                <p>Created by <a href="http://tangallan.azurewebsites.net" target="_blank">Allan Tang</a></p>
            </div>
        </footer>
    </div>
    
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>